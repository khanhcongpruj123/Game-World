<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">#00FFFFFF</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="tint">#FFFFFF</item>
    </style>

    <style name="ButtonBuyGameDetail" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">#2196F3</item>
        <item name="cornerRadius">6dp</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="WhiteBoldText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SubText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="GameWorld" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">#00FFFFFF</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

</resources>
